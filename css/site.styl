@import 'kouto-swiss'
@import 'helpers' 

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)
$color-yellow = rgb(252, 226, 5)

// ******************************************************

// BASIC

html
  height: 100%
  width: 100%
  background-color: $color-black
  color: $color-white
  
body 
  height: 100%
  width: 100%
  overflow: hidden

img
  max-width: 100%
  height: auto

.mobile-only
  display: initial !important 
  
.desktop-only
  display: none !important 
  
#organs
  position: fixed
  height: 100vh
  width: 100%
  opacity: 0
  transition: opacity 1s linear
  top: -50vh
  svg 
    margin-left: 10%
  
#gradient-background
  background-image: linear-gradient(to bottom, $color-white 10%, $color-yellow 35%, $color-black 100%)
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 35vh
  
#main-container 
  width: 100%
  padding-top: 100vh
  min-height: 100vh
  top: 0
  left: 0

// ******************************************************

// MEDIA QUERIES

$gutter = 18px 

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)
    
$font-size-basic = 26px
$font-size-large = 38px
$font-size-small = 22px

grid(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large, false, $font-size-small)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 24px
  
  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)
    
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
  
  grid(680px, $gutter, m)
    
  .mobile-only
    display: none !important
  
  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 30px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)
  
  grid(1000px, $gutter, l)
  
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
    
  .desktop-only
    display: initial !important

  @import 'responsive/desktop'
  
@media screen and (min-width: 1280px)
  
  grid(1200px)

@media screen and (min-width: 1366px)

  grid(1300px)

@media screen and (min-width: 1680px)

  grid(1600px)

@media screen and (min-width: 1920px)

  grid(1800px)
